{
  "name": "lint-use",
  "version": "1.0.0",
  "description": "Collection of Lint Utilities",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "prepare": "husky",
    "cm": "git-cz",
    "release": "semantic-release",
    "build": "rm -rf dist && tsc --project tsconfig.production.json && vite build",
    "eslint": "time eslint .",
    "eslint:view": "eslint-flat-config-viewer",
    "eslint:fix": "time eslint --fix .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "eslint",
    "stylelint",
    "typescript-eslint"
  ],
  "author": "Tang Lijin <ho_ho_gl@hotmail.com>",
  "homepage": "https://github.com/ljtang2009/lint-use/",
  "bugs": {
    "url": "https://github.com/ljtang2009/lint-use/issues",
    "email": "ho_ho_gl@hotmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ljtang2009/lint-use.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/eslint": "^8.56.3",
    "@types/eslint__js": "^8.42.3",
    "@vitest/ui": "^1.3.1",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.0",
    "desm": "^1.3.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-flat-config-viewer": "^0.1.11",
    "globals": "^14.0.0",
    "husky": "^9.0.11",
    "lodash": "^4.17.21",
    "semantic-release": "^23.0.6",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitepress": "^1.0.1",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@stylistic/eslint-plugin": "^1.6.3",
    "@types/confusing-browser-globals": "^1.0.3",
    "confusing-browser-globals": "^1.0.11",
    "eslint-plugin-jsonc": "^2.13.0",
    "jsonc-eslint-parser": "^2.4.0",
    "stylelint-config-clean-order": "^5.4.1",
    "stylelint-prettier": "^5.0.0",
    "typescript-eslint": "^7.0.2"
  }
}
